<h1 class="center" style="margin-top: 0px; margin-bottom: 30px">Log in</h1>
<div class="row" id="article_form">
  <div class="col-md-4 col-md-offset-4 col-xs-10 col-xs-offset-1">
    <div class="well well-lg" >
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form", path: login_url }) do |f| %>
          <div class="form-group">
            <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password ", autofocus: true %>
          </div>
          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
          </div>
          <div class="form-group center">
            <strong>OR</strong>
          </div>
          <div class="form-group">
            <%= f.button 'Sign up', class: "btn btn-secondary btn-block"%>
          </div>
      <% end %>
    </div>
  </div>
</div>