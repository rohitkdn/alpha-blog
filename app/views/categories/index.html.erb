<h1 align="center">Listing all categories</h1>

<div class="row" style="margin-top: 30px">
  <div class="col-md-4 col-md-offset-4 ">
    <% if @categories.blank? %>
        <h2 align="center">Oops! Nothing to display.</h2>
    <% else %>
        <div class="list-group article-listing-title">
          <% @categories.each do |category| %>
              <%= link_to category_path(category) do %>
                  <div class="row list-group-item" id="articles_all" >
                    <div class="col-md-8" >
                      <h4>
                        <%= category.name %>
                      </h4>
                    </div>
                    <div class="badge" style="margin-top: 10px" align="right">
                      <%= category.articles.count %>
                    </div>
                  </div>
              <% end %>
          <% end %>
        </div>
        <div align="center"> <%= will_paginate %> </div>
    <% end %>
  </div>
</div>
